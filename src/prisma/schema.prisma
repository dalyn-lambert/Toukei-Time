generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model User {
  id         Int          @id @default(autoincrement())
  username  String
  email     String        @unique
  password  String
  resource  Resource[]
  studyLogs StudyLog[]
}

model StudyLog {
  id        Int       @id @default(autoincrement())
  title     String
  time      Int
  category  Category
  date      DateTime  @default(now())
  resource  Resource  @relation(fields: [resourceId], references: [id])
  resourceId Int
  user      User      @relation(fields: [userId], references: [id])
  userId    Int  
}


model Resource {
  id        Int      @id @default(autoincrement())
  name      String
  category  Category
  dateAdded DateTime  @default(now())
  status    Status
  link      String?
  notes     String?
  studyLogs StudyLog[]
  user      User @relation(fields: [userId], references: [id])
  userId    Int  
}

enum Category {
  Listening
  Reading
  Watching
  Speaking
  Playing
}

enum Status {
  Current
  Completed
  Planned
  OnHold
  Dropped 
}